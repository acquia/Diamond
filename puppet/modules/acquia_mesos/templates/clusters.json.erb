<%
    servers = @aurora_zookeeper_connection_string.split(',').map{|i| i.split(':').first}
    servers = servers.join(',')
-%>
[{
  "name": "<%= @cluster_name %>",
  "zk": "<%= servers %>",
  "auth_mechanism": "<%= @auth_mechanism %>",
  "scheduler_zk_path": "/aurora/scheduler/",
  "slave_run_directory": "<%= @slave_run_directory %>",
  "slave_root": "<%= @slave_root %>"
}]
