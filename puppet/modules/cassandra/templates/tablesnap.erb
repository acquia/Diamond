<%-
stack_name = cloudformation_stackname(@ec2_instance_id)
-%>
# Defualt config file used by tablesnap init script, copy to /etc/default/tablesnap
RUN=yes
DAEMON_OPTS="<%= cloudformation_output(stack_name, 'NemesisS3Backups') %> /var/lib/cassandra/data"

# Log to syslog
export TABLESNAP_SYSLOG=True
