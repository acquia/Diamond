# Build all packages and docker images used by puppet
#

require 'pathname'

nemesis_puppet_root = File.expand_path(File.join(Pathname.new(__FILE__).realpath, '..', '..'))
build_root = File.join(nemesis_puppet_root, 'build')

Dir.chdir(build_root) do
  system("./build.sh #{ARGV.join(' ')}")
  if $?.exitstatus != 0
    exit $?.exitstatus
  end
end
